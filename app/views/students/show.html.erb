<p id="notice"><%= notice %></p>

<h1>Student: <%= @student.email %></h1>

<%= link_to 'Edit Student', edit_student_path(@student) %> |
<%= link_to 'Destroy', student_path(:id => @student), method: :delete%>
<%= link_to 'Back', students_path %>

<h2>Plans Of Study:</h2>
<ul>
  <% @semesters.each do |semester| %>
    <li>
      <%= link_to semester.name, semester %>
      <%=semester.course1%>
      <%=semester.course2%>
      <%=semester.course3%>
      <%=semester.course4%>
    </li>
  <% end %>
</ul>

