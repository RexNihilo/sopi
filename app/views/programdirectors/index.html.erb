<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cwid</th>
      <th>Concentration</th>
      <th>Advisor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student_path(student) %></td>
        <td><%= student.cwid %></td>
        <td><%= student.concentration %></td>
        <% if student.advisor_id %>
          <% advisor = student.advisor %>
          <td><%= link_to advisor.name, professor_path(advisor) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Courses</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th>Number</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
  <% @courses.each do |course| %>
   <tr>
       <td><%=course.prefix%></td>
       <td><%= link_to course.name, course %></td>
       <td><%=course.section%></td>
       <td><%=course.number%></td>
      <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
