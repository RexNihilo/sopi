  </thead>
    </tr>
  </thead>

  <tbody>
    <% @professor.each do |professor| %>
      <tr>
        <td><%= link_to professor.name, professor_path(professor) %></td>
        <td><%= professor.cwid %></td>
      </tr>
    <% end %>
  </tbody>
