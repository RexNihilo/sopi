<h1>New Course</h1>

<%= form_with model: @course do |form| %>
  <div>
    <%= form.label :prefix %><br>
    <%= form.text_field :prefix %>
    <% @course.errors.full_messages_for(:prefix).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :number %><br>
    <%= form.text_field :number %>
    <% @course.errors.full_messages_for(:number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :section %><br>
    <%= form.text_field :section %>
    <% @course.errors.full_messages_for(:section).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @course.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>