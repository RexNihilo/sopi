<% if @semester %>

    <h1>Add a Course</h1>
    <%= form_with model: @course, url: "/semesters/#{@semester.id}/courses/#{@course.id}", local: true do |form| %>
        <div class="form-group">
            <%= form.label :course %>
            <%= form.collection_select :course_id, Course.all, :id, :name, :include_blank => true, class:"form-control" %>
        </div><br>
        
        <div class="actions">
            <%= form.submit %>
        </div>
    <% end %>

<% else %>

    <h1>New Course</h1>
    <%= form_with(model: @course) do |form| %>
        <% if @course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
        
          <ul>
            <% @course.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_select :name, class:"form-control" %>
        </div><br>
        
        <div class="actions">
            <%= form.submit %>
        </div>
    <% end %>
    
<% end %>
